source_set("base_sources") {
  include_dirs = [ "//" ]

  sources = [
    "concurrent/mutex.cc",
    "concurrent/mutex.h",
    "concurrent/mutex_guard.cc",
    "concurrent/mutex_guard.h",
    "concurrent/restrict_mutex.cc",
    "concurrent/restrict_mutex.h",
  ]
}

executable("mutex_tests") {
  include_dirs = [ "//" ]

  sources = [ "concurrent/mutex_tests.cc" ]

  deps = [ ":base_sources" ]
}

group("base_tests") {
  deps = [ ":mutex_tests" ]
}
